---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "About Me";

const identity = {
    firstName: "Nikhil",
    country: "USA",
    occupation: "Student & Cybersecurity Enthusiust",
    hobbies: ["Gaming", "Working Out", "Hiking"],
};

const skills = [
    "HTML",
    "CSS",
    "JavaScript",
    "Python",
    "C++",
    "Java",
    "Cybersecurity",
];

const happy = true;
const finished = true;
const goal = 3; // Boolean value changes the statement that is rendered

const skillColor = "navy";
---

<BaseLayout
    ><h1>{pageTitle}</h1>
    <h2>... and my new website built in astro</h2>
    <p>
        Currently I am working through Astro's tutorial. This is the seocnd page
        on my website.
    </p>
    <p>Here are a few facts about me:</p>
    <ul>
        <li>My name is {identity.firstName}.</li>
        <li>
            I live in the {identity.country} and I am a {identity.occupation}.
        </li>
        {
            identity.hobbies.length >= 2 && (
                <li>
                    Two of my hobbies are: {identity.hobbies[0]} and{" "}
                    {identity.hobbies[1]}
                </li>
            )
        }
    </ul>
    <p>My skills are:</p>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
        <!-- This is a way to list out a whole array -->
    </ul>
    {happy && <p> I am happy to be learning astro!</p>}
    {finished && <p>I finished this tutorial!</p>}
    {
        goal === 3 ? (
            <p>My goal is to finish in three days</p>
        ) : (
            <p>My goal is not 3 days</p>
        )
    }</BaseLayout
>
